pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                saveAndPrintDate("test")
            }
        }
        stage('build') {
            steps {
                sh "cat test | grep 2019"
            }
        }
    }
}

def saveAndPrintDate(filename = ''){
    sh "date > $filename && cat $filename"
}